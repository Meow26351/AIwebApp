<div class="text-center ">
  <%= image_tag("image/imagerating.png", :class=>"image border border-4") %>
</div>
<h2 style="text-align: center">Log in</h2>

<div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3 form-style">
      <%= f.label :email, :class=> "form-label"%> <br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=> "form-control", :placeholder=>"email@gmail.com" %>
    </div>

    <div class="mb-3 form-style">
      <%= f.label :password, :class=> "form-label"%><br/>
      <%= f.password_field :password, autocomplete: "current-password", :class=> "form-control"%>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-group" style="text-align: center">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions" style="text-align: center">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_agent_confirmation_path(resource_name) %><br />
  <% end %>
  
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name) %><br/>
  <% end %>

</div>